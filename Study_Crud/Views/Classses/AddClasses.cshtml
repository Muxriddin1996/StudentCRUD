@model Study_Crud.Models.Entity.Classes
@{
    ViewData["Title"] = "Create";
}

<div class="container col-md-8">
    <div class="row mb-4"  style="padding-bottom:12px">
        <h3>New Classes</h3>
    </div>
    <form method="post" action="AddClasses">
         @Html.HiddenFor(m=>m.Id)
        <!-- 2 column grid layout with text inputs for the first and last names -->
        <div class="row mb-4" >
            <div class="col">
                <div class="form-outline">
                     <label>Name</label>
                    <input type="text" name="Name" value="@Model.Name" maxlength="15" class="form-control" placeholder="Name" required />
                </div>
                <div class="form-outline">
                    <label>Capasity</label>
                    <input type="text" name="Capasity" value="@Model.Capasity" maxlength="15" class="form-control" placeholder="Capasity" required />
                </div>
                <div class="form-outline">
                    <label>Nomer</label>
                    <input type="text" name="class_nomer" value="@Model.class_nomer" maxlength="15" class="form-control" placeholder="ClassNomer" required />
                </div>
                
            </div>
            <div class="row mb-4" style="padding:12px">
                @if (Model.Id == 0)
                {
                    <button type="submit" class="btn btn-primary btn-block mb-4">Add Classes</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary btn-block mb-4">Update Classes</button>
                }
                <button class=""
            </div>
        </div>
    </form>

</div>
