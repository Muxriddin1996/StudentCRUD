@model IEnumerable<Study_Crud.Models.Entity.Classes>
@{
    ViewData["Title"] = "Index";
}
<h1>Classes</h1>

<form method="get" asp-action="Index">
    <p>
         <input type="search" placeholder="Enter Classes Name...." value="@ViewData["GetClassesDetails"]" name="ClassesSearch" style="width:500px;" />
         <input type="submit" value="Search" class="btn btn-primary"       
    </p>
          <a asp-action="Index"> Get all Client</a>
</form>




<a href="AddClasses">
        <button type="button" class="btn btn-primary" data-mdb-toggle="modal" data-mdb-target="#exampleModal">
            Create New Classes
        </button>
    </a>  

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capasity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.class_nomer)
            </th>
          
            
            <th></th>
        </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                  @Html.DisplayNameFor(ModelItem => item.Capasity)
            </td>
            <td>
                  @Html.DisplayNameFor(ModelItem => item.class_nomer)
            </td>
           
            <td>
                <a asp-action="AddClasses" asp-route-id="@item.Id">Edit</a> |             
                  <a href="#">
                                <button type="button"
                                class="btn btn-danger"
                                data-mdb-ripple-color="dark">
                                    @Html.ActionLink("Delete","DeleteClasses",
                            new { Id = item.Id},
                            new { onclick = "return confirm('Are sure wants to Detele?');" })
                                </button>

                            </a>
            </td>
        </tr>
}
    </tbody>
</table>

